<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Selenium Grid Suite" parallel="tests" thread-count="3">

    <parameter name="gridUrl" value="http://localhost:4444"/>

    <test name="Chrome on Grid">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <parameter name="useGrid" value="true"/>

        <classes>
            <class name="com.simbirsoft.ui.tests.HomePageTests"/>
            <class name="com.simbirsoft.ui.tests.NavigationTest"/>
        </classes>
    </test>

    <test name="Firefox on Grid">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="true"/>
        <parameter name="useGrid" value="true"/>

        <classes>
            <class name="com.simbirsoft.ui.tests.HomePageTests"/>
            <class name="com.simbirsoft.ui.tests.NavigationTest"/>
        </classes>
    </test>

    <test name="Edge on Grid">
        <parameter name="browser" value="edge"/>
        <parameter name="headless" value="true"/>
        <parameter name="useGrid" value="true"/>

        <classes>
            <class name="com.simbirsoft.ui.tests.HomePageTests"/>
            <class name="com.simbirsoft.ui.tests.NavigationTest"/>
        </classes>
    </test>

</suite>